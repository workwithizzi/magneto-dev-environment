# print_doing "Creating a db dump at db/$FILE_NAME"

# bin/n98-magerun2 db:dump --stdout > "db/$FILE_NAME"

if [ -z "$1" ]; then
	echo "Available db files for importing are:"
	find _ref db -name "*.sql"

else
	if [ -f "$1" ]; then
		bin/mysql < "$1"
		echo "db found... importing"
	else
		echo "Local database file cannot be found"
		echo "Available db files for importing are:"
		find _ref db -name "*.sql"
	fi
fi
