#!/bin/bash
source bin/utils

print_doing "Correcting filesystem permissions..."

if [ -z "$1" ]; then
  bin/clinotty find var vendor pub/static pub/media app/etc -type f -exec chmod u+w {} \;
  bin/clinotty find var vendor pub/static pub/media app/etc -type d -exec chmod u+w {} \;
  bin/clinotty chmod u+x bin/magento
else
  bin/clinotty find "$@" -type f -exec chmod u+w {} \;
  bin/clinotty find "$@" -type d -exec chmod u+w {} \;
fi

print_success "Filesystem permissions corrected."
